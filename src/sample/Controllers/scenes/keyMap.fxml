<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIcon?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<AnchorPane fx:id="key_map_main_layout" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
            minWidth="-Infinity" prefHeight="515.0" prefWidth="703.0" styleClass="dark-background"
            stylesheets="@../../layouts/CSS/maincss.css" xmlns="http://javafx.com/javafx/8.0.141"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controllers.KeyMapController">
    <children>
        <AnchorPane prefHeight="515.0" prefWidth="310.0" styleClass="bluebackground"
                    stylesheets="@../../layouts/CSS/maincss.css">
            <children>
                <JFXComboBox fx:id="ques_num_txt" layoutX="36.0" layoutY="145.0" prefHeight="36.0" prefWidth="246.0"
                             promptText="Select Question" style="-fx-background-color: #59C7C6;"/>
                <JFXTextField fx:id="sub_ques_txt" labelFloat="true" layoutX="36.0" layoutY="233.0" prefHeight="36.0"
                              prefWidth="236.0" promptText="SubQuestiion">
                    <font>
                        <Font size="18.0"/>
                    </font>
                </JFXTextField>
                <JFXButton fx:id="proceed_btn" layoutX="183.0" layoutY="314.0" onAction="#generateRadioButton"
                           prefHeight="36.0" prefWidth="93.0" styleClass="darkborder"
                           stylesheets="@../../layouts/CSS/maincss.css" text="Proceed"/>
                <Label layoutX="70.0" layoutY="66.0" prefHeight="36.0" prefWidth="124.0" text="Key Map"
                       textFill="#fcf7f7">
                    <font>
                        <Font name="Segoe UI" size="32.0"/>
                    </font>
                </Label>
                <FontAwesomeIcon fx:id="keymap_close_btn" glyphName="CLOSE" layoutX="276.0" layoutY="18.0"
                                 onMouseClicked="#closeEvent" size="2em"/>
            </children>
        </AnchorPane>
        <BorderPane fx:id="border_pane" layoutX="310.0" prefHeight="474.0" prefWidth="395.0"
                    styleClass="dark-background" stylesheets="@../../layouts/CSS/maincss.css">
            <center>
                <ScrollPane prefHeight="471.0" prefWidth="395.0" BorderPane.alignment="CENTER">
                    <content>
                        <GridPane fx:id="keymap_gridpane" prefHeight="-Infinity" prefWidth="-Infinity"
                                  styleClass="dark-background" stylesheets="@../../layouts/CSS/maincss.css" vgap="20.0">

                        </GridPane>
                    </content>
                </ScrollPane>
            </center>
        </BorderPane>
        <JFXButton fx:id="student_response_btn" alignment="BASELINE_LEFT" contentDisplay="RIGHT" layoutX="575.0"
                   layoutY="480.0" onAction="#studentResponseEvent" text="Student Response"/>
        <JFXButton fx:id="keymap_save_button" layoutX="330.0" layoutY="480.0" onAction="#saveRadioData"
                   prefHeight="27.0" prefWidth="124.0" text="Save"/>
    </children>
</AnchorPane>
