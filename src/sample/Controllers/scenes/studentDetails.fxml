<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIcon?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<StackPane fx:id="stackPane" stylesheets="@../../layouts/CSS/maincss.css" xmlns="http://javafx.com/javafx/8.0.141"
           xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controllers.StudentDetailsController">

    <AnchorPane fx:id="key_map_main_layout" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
                minWidth="-Infinity" prefHeight="544.0" prefWidth="1094.0" styleClass="dark-background">
    <children>
        <AnchorPane layoutX="66.0" layoutY="29.0" prefHeight="515.0" prefWidth="310.0" styleClass="light-background"
                    stylesheets="@../../layouts/CSS/maincss.css">
            <children>
                <JFXComboBox fx:id="ques_num_txt" labelFloat="true" layoutX="32.0" layoutY="71.0"
                             onAction="#questionChanged" prefHeight="36.0" prefWidth="246.0"
                             promptText="Select Question"/>
                <JFXTextField fx:id="studentNameTxt" labelFloat="true" layoutX="37.0" layoutY="166.0" prefHeight="36.0"
                              prefWidth="236.0" promptText="Student Name">
                    <font>
                        <Font size="18.0"/>
                    </font>
                </JFXTextField>
                <JFXButton fx:id="proceed_btn" layoutX="203.0" layoutY="445.0" onAction="#generateRadioButton"
                           prefHeight="36.0" prefWidth="93.0" styleClass="darkborder"
                           stylesheets="@../../layouts/CSS/maincss.css" text="Proceed"/>
                <JFXTextField fx:id="rollNumberTxt" labelFloat="true" layoutX="37.0" layoutY="258.0" prefHeight="36.0"
                              prefWidth="236.0" promptText="Roll number">
                    <font>
                        <Font size="18.0"/>
                    </font>
                </JFXTextField>
                <JFXButton fx:id="nextStudent_btn" layoutX="37.0" layoutY="445.0" onAction="#nextStudent"
                           prefHeight="36.0" prefWidth="93.0" styleClass="darkborder"
                           stylesheets="@../../layouts/CSS/maincss.css" text="Next Student"/>
                <JFXTextField fx:id="subQuestionTxt" labelFloat="true" layoutX="32.0" layoutY="360.0" prefHeight="36.0"
                              prefWidth="246.0" promptText="SubQuestion">
                    <font>
                        <Font size="18.0"/>
                    </font>
                </JFXTextField>
                <AnchorPane layoutX="-64.0" layoutY="1.0" prefHeight="515.0" prefWidth="63.0">
                    <children>
                        <FontAwesomeIcon glyphName="FOLDER" layoutX="11.0" layoutY="68.0"
                                         onMouseClicked="#openTestEvent" size="3em" styleClass="icon"/>
                        <FontAwesomeIcon glyphName="KEY" layoutX="10.0" layoutY="145.0" onMouseClicked="#openKeyEvent"
                                         size="3em" styleClass="icon"/>
                    </children>
                </AnchorPane>
            </children>
        </AnchorPane>
        <AnchorPane fx:id="side_anchor" layoutX="396.0" layoutY="29.0" prefHeight="515.0" prefWidth="401.0"
                    styleClass="light-background">
            <children>
                <ScrollPane prefHeight="471.0" prefWidth="395.0" styleClass="dark-background">
                    <content>
                        <AnchorPane prefHeight="471.0" prefWidth="395.0" styleClass="dark-background">
                            <children>
                                <GridPane fx:id="keymap_gridpane" prefHeight="-Infinity" prefWidth="-Infinity"
                                          styleClass="dark-background" stylesheets="@../../layouts/CSS/maincss.css"
                                          vgap="20.0">

                                </GridPane>
                            </children>
                        </AnchorPane>
                    </content>
                </ScrollPane>
                <JFXButton fx:id="student_response_btn" alignment="BASELINE_LEFT" contentDisplay="RIGHT" layoutX="239.0"
                           layoutY="485.0" onAction="#generateReport" text="Generate Report"/>
                <JFXButton fx:id="keymap_save_button" layoutX="14.0" layoutY="485.0" onAction="#saveRadioData"
                           prefHeight="27.0" prefWidth="124.0" text="Save"/>
            </children>
        </AnchorPane>
        <JFXListView fx:id="student_listView" layoutX="797.0" layoutY="30.0" onMouseClicked="#getStudentDetails"
                     prefHeight="515.0" prefWidth="339.0"/>
        <BorderPane fx:id="top_borderPane" prefHeight="27.0" prefWidth="1094.0" styleClass="light-background">
            <right>
                <FontAwesomeIcon fx:id="keymap_close_btn" fill="#fcf9f9" glyphName="CLOSE" onMouseClicked="#closeEvent"
                                 size="2em" BorderPane.alignment="CENTER"/>
            </right>
            <left>
                <Label alignment="CENTER" onMouseClicked="#showBasicInfo" prefHeight="24.0" prefWidth="171.0"
                       text="Student Deatails" textFill="#fcf7f7" BorderPane.alignment="CENTER">
                    <font>
                        <Font name="Segoe UI" size="19.0"/>
                    </font>
                </Label>
            </left>
        </BorderPane>
    </children>
</AnchorPane>
</StackPane>
