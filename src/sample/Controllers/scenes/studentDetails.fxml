<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIcon?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<StackPane fx:id="stackPane" styleClass="stack-pane" stylesheets="@../../layouts/CSS/maincss.css"
           xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="sample.Controllers.StudentDetailsController">

    <AnchorPane fx:id="key_map_main_layout" styleClass="light-background">
        <children>
            <BorderPane prefHeight="200.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                        AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                <top>
                    <BorderPane fx:id="top_borderPane" prefHeight="27.0" prefWidth="1094.0"
                                styleClass="tittlePaneBackground" BorderPane.alignment="CENTER">
                        <right>
                            <FontAwesomeIcon fx:id="keymap_close_btn" fill="#fcf9f9" glyphName="CLOSE"
                                             onMouseClicked="#closeEvent" size="2em" BorderPane.alignment="CENTER"/>
                        </right>
                        <left>
                            <Label alignment="CENTER" onMouseClicked="#showBasicInfo" prefHeight="24.0"
                                   prefWidth="171.0" text="Student Deatails" textFill="WHITE"
                                   BorderPane.alignment="CENTER">
                                <font>
                                    <Font name="Segoe UI" size="19.0"/>
                                </font>
                            </Label>
                        </left>
                    </BorderPane>
                </top>
                <left>
                    <AnchorPane prefHeight="499.0" prefWidth="68.0" styleClass="dark-background"
                                BorderPane.alignment="CENTER">
                        <children>
                            <VBox layoutX="-1.0" prefHeight="418.0" prefWidth="122.0" spacing="20.0"
                                  AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                                  AnchorPane.topAnchor="0.0">
                                <children>
                                    <JFXButton fx:id="openTest_btn" onAction="#openEvent" prefHeight="51.0"
                                               prefWidth="55.0" styleClass="panelButtonColor" text=" ">
                                        <graphic>
                                            <FontAwesomeIcon glyphName="FOLDER" onMouseClicked="#openTestEvent"
                                                             size="3em" styleClass="icon"/>
                                        </graphic>
                                    </JFXButton>
                                    <JFXButton fx:id="openKey_btn" onAction="#openEvent" prefHeight="51.0"
                                               prefWidth="49.0" styleClass="panelButtonColor" text=" ">
                                        <graphic>
                                            <FontAwesomeIcon glyphName="KEY" onMouseClicked="#openKeyEvent" size="3em"
                                                             styleClass="icon"/>
                                        </graphic>
                                    </JFXButton>
                                    <JFXButton fx:id="newTestFile_btn" onAction="#openEvent" prefHeight="48.0"
                                               prefWidth="54.0" styleClass="panelButtonColor" text="  ">
                                        <graphic>
                                            <FontAwesomeIcon glyphName="FILE" size="3em" styleClass="icon"/>
                                        </graphic>
                                    </JFXButton>
                                    <JFXButton fx:id="openReport_btn" onAction="#openEvent" prefHeight="61.0"
                                               prefWidth="52.0" styleClass="panelButtonColor" text=" ">
                                        <graphic>
                                            <ImageView fitHeight="79.0" fitWidth="76.0" pickOnBounds="true"
                                                       preserveRatio="true">
                                                <image>
                                                    <Image url="@../../../icons/report3.png"/>
                                                </image>
                                            </ImageView>
                                        </graphic>
                                    </JFXButton>
                                </children>
                            </VBox>
                        </children>
                    </AnchorPane>
                </left>
                <center>
                    <AnchorPane BorderPane.alignment="CENTER">
                        <children>
                            <ScrollPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                                        AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                <content>
                                    <AnchorPane styleClass="light-background">
                                        <children>

                                            <AnchorPane layoutX="14.0" layoutY="14.0" prefHeight="515.0"
                                                        prefWidth="310.0" styleClass="light-background"
                                                        stylesheets="@../../layouts/CSS/maincss.css"
                                                        AnchorPane.bottomAnchor="-14.0" AnchorPane.leftAnchor="14.0"
                                                        AnchorPane.rightAnchor="845.0" AnchorPane.topAnchor="14.0">
                                                <children>
                                                    <JFXComboBox fx:id="ques_num_txt" editable="true" layoutX="29.0"
                                                                 layoutY="26.0" onAction="#questionChanged"
                                                                 prefHeight="36.0" prefWidth="246.0"
                                                                 promptText="Select Question"/>
                                                    <JFXTextField fx:id="studentNameTxt" labelFloat="true"
                                                                  layoutX="34.0" layoutY="121.0" prefHeight="36.0"
                                                                  prefWidth="236.0" promptText="Student Name">
                                                        <font>
                                                            <Font size="18.0"/>
                                                        </font>
                                                    </JFXTextField>
                                                    <JFXButton fx:id="proceed_btn" graphicTextGap="30.0" layoutX="30.0"
                                                               layoutY="455.0" onAction="#generateRadioButton"
                                                               prefHeight="36.0" prefWidth="93.0"
                                                               styleClass="buttonsize"
                                                               stylesheets="@../../layouts/CSS/maincss.css"
                                                               text="Proceed">
                                                        <graphic>
                                                            <ImageView fitHeight="50.0" fitWidth="85.0"
                                                                       pickOnBounds="true" preserveRatio="true"
                                                                       styleClass="button-icon-size">
                                                                <image>
                                                                    <Image url="@../../../icons/proceed.png"/>
                                                                </image>
                                                            </ImageView>
                                                        </graphic>
                                                    </JFXButton>
                                                    <JFXTextField fx:id="rollNumberTxt" labelFloat="true" layoutX="34.0"
                                                                  layoutY="213.0" prefHeight="36.0" prefWidth="236.0"
                                                                  promptText="Roll number">
                                                        <font>
                                                            <Font size="18.0"/>
                                                        </font>
                                                    </JFXTextField>
                                                    <JFXButton fx:id="nextStudent_btn" graphicTextGap="10.0"
                                                               layoutX="30.0" layoutY="381.0" onAction="#nextStudent"
                                                               prefHeight="56.0" prefWidth="183.0"
                                                               styleClass="buttonsize"
                                                               stylesheets="@../../layouts/CSS/maincss.css"
                                                               text="Next Student">
                                                        <graphic>
                                                            <ImageView fitHeight="50.0" fitWidth="85.0"
                                                                       pickOnBounds="true" preserveRatio="true">
                                                                <image>
                                                                    <Image url="@../../../icons/student2.png"/>
                                                                </image>
                                                            </ImageView>
                                                        </graphic>
                                                    </JFXButton>
                                                    <JFXTextField fx:id="subQuestionTxt" labelFloat="true"
                                                                  layoutX="29.0" layoutY="315.0" prefHeight="36.0"
                                                                  prefWidth="246.0" promptText="SubQuestion">
                                                        <font>
                                                            <Font size="18.0"/>
                                                        </font>
                                                    </JFXTextField>
                                                </children>
                                            </AnchorPane>
                                            <AnchorPane fx:id="side_anchor" layoutX="394.0" layoutY="1.0"
                                                        prefHeight="515.0" prefWidth="401.0"
                                                        styleClass="light-background" AnchorPane.bottomAnchor="0.0"
                                                        AnchorPane.leftAnchor="394.0" AnchorPane.rightAnchor="374.0"
                                                        AnchorPane.topAnchor="0.0">
                                                <children>
                                                    <ScrollPane prefHeight="471.0" prefWidth="395.0"
                                                                styleClass="dark-background">
                                                        <content>
                                                            <AnchorPane prefHeight="477.0" prefWidth="386.0"
                                                                        styleClass="light-background">
                                                                <children>
                                                                    <GridPane fx:id="keymap_gridpane"
                                                                              prefHeight="-Infinity"
                                                                              prefWidth="-Infinity"
                                                                              styleClass="dark-background"
                                                                              stylesheets="@../../layouts/CSS/maincss.css"
                                                                              vgap="20.0">

                                                                    </GridPane>
                                                                </children>
                                                            </AnchorPane>
                                                        </content>
                                                    </ScrollPane>
                                                    <JFXButton fx:id="keymap_save_button" graphicTextGap="30.0"
                                                               layoutX="76.0" layoutY="471.0" onAction="#saveRadioData"
                                                               prefHeight="27.0" prefWidth="124.0"
                                                               styleClass="buttonsize" text="Save">
                                                        <graphic>
                                                            <ImageView fitHeight="50.0" fitWidth="85.0"
                                                                       pickOnBounds="true" preserveRatio="true"
                                                                       styleClass="button-icon-size">
                                                                <image>
                                                                    <Image url="@../../../icons/save.png"/>
                                                                </image>
                                                            </ImageView>
                                                        </graphic>
                                                    </JFXButton>
                                                </children>
                                            </AnchorPane>
                                            <JFXListView fx:id="student_listView" layoutX="817.0"
                                                         onMouseClicked="#getStudentDetails" prefHeight="515.0"
                                                         prefWidth="339.0" AnchorPane.bottomAnchor="0.0"
                                                         AnchorPane.leftAnchor="817.0" AnchorPane.rightAnchor="52.0"
                                                         AnchorPane.topAnchor="0.0"/>


                                        </children>
                                    </AnchorPane>
                                </content>
                            </ScrollPane>

                        </children>
                    </AnchorPane>
                </center>
            </BorderPane>
        </children>
    </AnchorPane>
</StackPane>
